{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "default_locale": "en",
  "version": "1.2.0",
  "description": "__MSG_extDescription__",
  "permissions": ["activeTab", "storage", "scripting"],
  "commands": {
    "activate-glideread": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Alt+G"
      },
      "description": "__MSG_commandActivate__"
    }
  },
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.reddit.com/*",
    "*://news.ycombinator.com/*",
    "*://*.medium.com/*",
    "*://*.dev.to/*",
    "*://*.techcrunch.com/*",
    "*://*.arstechnica.com/*",
    "*://*.theverge.com/*",
    "*://*.hackernoon.com/*",
    "*://*.substack.com/*",
    "*://*.discord.com/*"
  ],
  "optional_host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
